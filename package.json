
{
  "name": "deployment-readiness-auditor",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "esbuild index.tsx --bundle --outfile=index.js --format=esm --sourcemap --watch --loader:.tsx=tsx --loader:.ts=ts --external:react --external:react-dom --external:recharts --external:lucide-react --external:@google/genai --external:html2canvas --external:jspdf --external:jspdf-autotable --external:mermaid --external:driver.js",
    "build": "esbuild index.tsx --bundle --outfile=index.js --format=esm --minify --loader:.tsx=tsx --loader:.ts=ts --external:react --external:react-dom --external:recharts --external:lucide-react --external:@google/genai --external:html2canvas --external:jspdf --external:jspdf-autotable --external:mermaid --external:driver.js",
    "start": "npm run build && node server.js"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "driver.js": "^1.3.1",
    "esbuild": "^0.27.2",
    "express": "^4.18.2",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.475.0",
    "mermaid": "^11.4.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^2.15.1"
  },
  "devDependencies": {
    "serve": "^14.2.4"
  }
}
